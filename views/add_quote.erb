<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title>Name that author!</title>
    
    <!-- Modernizr -->
    <script src="/static/modernizr.js" type="text/javascript"></script>

    <!-- CSS -->
    <link href="/static/normalize.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/static/all.css" media="screen" rel="stylesheet" type="text/css" />

		<script type="text/javascript">

		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-20350634-7']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();

		</script>

  </head>
  <body>
  	<div class="wrap">
  		<div class="col1">
  			<h1 class="italic">Name that author!</h1>
	      <h2>Add a quote</h2>

	      <%= 
		      unless params[:s].nil?
			     params[:s].eql?('1') ? "Added quote!" : 'Add failed' 
		      end
		    %>

				<form method="post" action="/admin/add">
					<textarea rows="4" cols="50" type="text" name="quote"  placeholder="Quote"></textarea><br/>
					<input type="text" name="title"  placeholder="Title"><br/>
					<input type="text" name="author"  placeholder="Author"><br/>
					<input type="text" name="cover_url" placeholder="url to cover"></br>
					<input type="submit" value="Add this quote">
				</form>

				</br>
				</br>
				</br>

				<p>We have <b><%= @quote_size %></b> quotes from <b><%= @book_size %></b> books!</p>
  		</div>
  		
  	</div>
  	

  </body>
</html>




