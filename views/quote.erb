  </head>
  
  <body class="index">
    <div class="wrap group">
  <div class="col1 group">
    <h1 class="italic">Name that author!</h1>
    <h2><%= @quote.quote %></h2>
    <div class="book book1 left">
      <a href="/r?r=<%= @choices[0].id == @quote.book.id ? 1 : 0 %>"><img src="<%= @choices[0].cover_url %>"></a>
      <a href="/r?r=<%= @choices[0].id == @quote.book.id ? 1 : 0 %>"><p><%= @choices[0].title %><br><span class="italic"><%= @choices[0].author %></span></p></a>
    </div>
    <span class="or left">or</span>
    <div class="book book2 left">
      <a href="/r?r=<%= @choices[1].id == @quote.book.id ? 1 : 0 %>"><img src="<%= @choices[1].cover_url %>"></a>
      <a href="/r?r=<%= @choices[1].id == @quote.book.id ? 1 : 0 %>"><p><%= @choices[1].title %><br><span class="italic"><%= @choices[1].author %></span></p></a>
    </div>
  </div>
  <div class="col2">
    <div class="meta">
      <div class="score">
        <span class="points"><%= @result %>/10</span><br>
        <span class="small-caps">correct</span>
      </div>
      <div class="cheer">Come on, you can do better...</div>
    </div>
  </div>
</div>
  </body>
  <script src="/static/scripts.js" type="text/javascript"></script>
</html>